page{
    height: 100%;
    background: #FAFBFF;
}
.message-container{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.msg-item-container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.msg-item{
    margin-bottom: 30rpx;
}
.title{
    font-weight: bold;
    font-size: 35rpx;
    margin-top: 80rpx;
    margin-bottom: 40rpx;
}

.new-btn{
    background: #A6ACBC;
    color: #fff;
    font-weight: bold;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    margin-bottom: 60rpx;
    letter-spacing: 1rpx;
}
.icon{
    width: 30rpx;
    height: 30rpx;
    margin-right: 8rpx;
}
