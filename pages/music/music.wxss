@import "../../common/rotation.wxss";

.music-container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.cover-img {
    width: 500rpx;
    height: 500rpx;
    margin-top: 160rpx;
    border-radius: 70%;
    overflow: hidden;
}
.control-bar{
    position: absolute;
    width: 600rpx;
    bottom: 70rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.btn{
    width: 50rpx;
    height: 50rpx;
}
.mid-btn{
    width: 70rpx;
    height: 70rpx;
}
.content{
    font-size: 36rpx;
    max-width: 550rpx;
    margin-top: 130rpx;
}


